#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite

# program launcher
super + d
	rofi -show run #-font "Roboto 14" -padding 15 -bw 3 -width 50 -lines 10 -separator-style "solid"  ###-color-window "#1f222d, #ff6200, argb:d3ff6200" -color-normal "#1f222d, #ffffff, #1f222d, argb:85ff6200, #ffffff"

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd
# exit menu
super + shift + e	
	~/scripts/shutdown.sh	
	

#
# dpms hotkeys	
#

# turn on cinemamode
super + p
	cinemamode on

# turn off cinemamode
super + shift + p
	cinemamode off

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# quit bspwm normally
super + shift + x
	i3lock -i /home/davide/Immagini/rick_morty_lockscreen_laptop.png	

# close and kill
super + q
	bspc node -{c}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest
	
# reset windows size
super + e
 	bspc node @/ -E

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,'~floating','~fullscreen'}
	

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus keybindings to direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}
	

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
	
	

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


# move node to direction	
super + shift + {Left,Down,Up,Right}
	/home/davide/dotfiles/scripts/scripts/bsmove.sh {west,south,north,east}
	
	
	
#
# multimedia keys
#

XF86AudioRaiseVolume
	vol up

XF86AudioLowerVolume
	vol down

XF86AudioMute
	vol mute
	
XF86AudioPlay
	mpc toggle	
	
XF86AudioNext
	mpc next

XF86AudioPrev
	mpc prev
	
XF86Calculator
	speedcrunch
	
XF86MonBrightnessUp
	light up
	
XF86MonBrightnessDown
	light down
