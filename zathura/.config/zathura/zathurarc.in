# vim ft:conf

# options
set selection-clipboard clipboard
set smooth-scroll "true"
set scroll-step 80
set adjut-open "fit-width"

# theme
set font "MesloLGS NF 12"
#set recolor-lightcolor "${xrdb:background}"
#set recolor-darkcolor "${xrdb:foreground}"
#set recolor-reverse-video "true"
set recolor-keephue "true"

set recolor "true"
set completion-bg "${xrdb:background}"
set completion-fg "${xrdb:foreground}"
set completion-group-bg "${xrdb:background}"
set completion-group-fg "${xrdb:color2}"
set completion-highlight-bg "${xrdb:foreground}"
set completion-highlight-fg "${xrdb:background}"
set recolor-lightcolor "${xrdb:background}"
set recolor-darkcolor "${xrdb:foreground}"
set default-bg "${xrdb:background}"
set inputbar-bg "${xrdb:background}"
set inputbar-fg "${xrdb:foreground}"
set notification-bg "${xrdb:background}"
set notification-fg "${xrdb:foreground}"
set notification-error-bg "${xrdb:color1}"
set notification-error-fg "${xrdb:foreground}"
set notification-warning-bg "${xrdb:color1}"
set notification-warning-fg "${xrdb:foreground}"
set statusbar-bg "${xrdb:background}"
set statusbar-fg "${xrdb:foreground}"
set index-bg "${xrdb:background}"
set index-fg "${xrdb:foreground}"
set index-active-bg "${xrdb:foreground}"
set index-active-fg "${xrdb:background}"
set render-loading-bg "${xrdb:background}"
set render-loading-fg "${xrdb:foreground}"
set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
